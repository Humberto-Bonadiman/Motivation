<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <LinearLayout
        android:id="@+id/linear_menu"
        android:layout_width="match_parent"
        android:paddingHorizontal="8dp"
        android:paddingVertical="16dp"
        android:background="@color/purple"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/image_all"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            app:tint="@color/dark_purple"
            android:src="@drawable/ic_all_inclusive"/>

        <ImageView
            android:id="@+id/image_emoticon"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            app:tint="@color/dark_purple"
            android:src="@drawable/ic_emoticon" />

        <ImageView
            android:id="@+id/image_light"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            app:tint="@color/dark_purple"
            android:src="@drawable/ic_light_mode" />

    </LinearLayout>

    <TextView
        android:id="@+id/text_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/linear_menu"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/cabin"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:text="@string/hello_kotlin" />

    <TextView
        android:id="@+id/text_phrase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cabin"
        android:text="@string/phrases_motivation"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:padding="16dp"
        android:layout_centerInParent="true"
        android:gravity="center" />
    
    <View
        android:layout_width="128dp"
        android:layout_height="3dp"
        android:layout_below="@id/text_phrase"
        android:background="@color/dark_purple"
        android:elevation="5dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button_new_phrase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:backgroundTint="@color/dark_purple"
        android:fontFamily="@font/cabin"
        android:text="@string/new_phrase" />

</RelativeLayout>